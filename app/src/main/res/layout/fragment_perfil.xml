<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Sección superior: Foto y alias -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imgFotoPerfil"
                android:src="@drawable/usuario_fotoperfil_default"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginEnd="16dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tvAlias"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AliasUsuario"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6" />

                <TextView
                    android:id="@+id/tvNombreUsuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NombreUsuario"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                    android:textColor="?attr/colorOnSurfaceVariant" />

            </LinearLayout>
        </LinearLayout>

        <!-- Separador -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorOutline"
            android:layout_marginVertical="16dp"/>

        <!-- Personas asistidas -->
        <TextView
            android:id="@+id/tvTituloAsistidos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personas asistidas asignadas a ti"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_marginBottom="8dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvPersonasAsistidas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAddAsistido"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+ Añadir persona asistida"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_marginBottom="16dp"/>

        <!-- Notificaciones -->
        <TextView
            android:id="@+id/tvTituloNotificaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notificaciones generales"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:id="@+id/layoutNotificaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Ejemplo: SwitchMaterial todo cuando haya notis-->
            <!--
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switchNotificacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Activar notificaciones"/> -->

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>
